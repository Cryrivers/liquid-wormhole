{{#liquid-wormhole to="outer-wormhole"}}
  <div class="green-box">
    Outer Wormhole

    {{#liquid-wormhole to="middle-wormhole"}}
      <div class="blue-box">
        Middle Wormhole

        <button {{action "showInner"}}>Show</button>

        {{#if showingInner}}
          {{#liquid-wormhole to="inner-wormhole"}}
            <div class="red-box">
              Inner Wormhole
            </div>
          {{/liquid-wormhole}}
        {{/if}}
      </div>
    {{/liquid-wormhole}}
  </div>
{{/liquid-wormhole}}
